<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedBookActivity">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/bookSavedImageView"
        android:src="@drawable/books"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookSavedNameTextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Book Name"
            android:textColor="#15981B"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real book name: "
            android:id="@+id/realBookNameSavedTextView"
            android:layout_below="@+id/bookNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>
    </LinearLayout>


</RelativeLayout>